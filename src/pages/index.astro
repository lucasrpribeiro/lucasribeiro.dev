---
import Layout from '../layouts/Layout.astro'
import Banner from '../components/Banner.astro'
---

<Layout title="Lucas Ribeiro - Welcome to my site.">
  <div
    class="relative container mx-auto flex flex-col items-center justify-center"
  >
    <div
      class="fixed -top-28 -right-28 blur-[300px] rounded-full bg-gradient-to-r from-yellow-400 to-yellow-700 w-1/3 h-72"
    >
    </div>
    <div
      class="fixed top-96 -left-28 blur-[300px] rounded-full bg-gradient-to-r from-swapGreen-400 to-green-700 w-1/3 h-72"
    >
    </div>
    <main class="w-full">
      <Banner />
    </main>
  </div>
</Layout>

<style>
  .circle {
    filter: blur(200px);
  }
</style>

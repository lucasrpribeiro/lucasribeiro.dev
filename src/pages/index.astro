---
import Layout from '../layouts/Layout.astro'
import NavBar from '../components/vue/NavBar.vue'
import Hero from '../components/Hero.astro'
import Technologies from '../components/Technologies.astro'
---

<Layout title="Lucas Ribeiro - Welcome to my site.">
  <div
    class="relative container mx-auto flex flex-col items-center justify-center"
  >
    <div class="hidden lg:flex gap-72 w-full h-[720px]">
      <div
        class="circle rounded-full bg-gradient-to-r from-yellow-400 to-yellow-700 w-1/3 h-72"
      >
      </div>
      <div
        class="circle rounded-full bg-gradient-to-r from-green-700 to-green-400 w-1/3 h-96 self-center"
      >
      </div>
      <div
        class="circle rounded-full bg-gradient-to-r from-purple-400 to-purple-700 w-1/3 h-80"
      >
      </div>
    </div><div class="hidden lg:flex gap-72 w-full h-[720px]">
      <div
        class="circle rounded-full bg-gradient-to-r from-purple-400 to-purple-700 w-1/4 h-72 self-center"
      >
      </div>
      <div class="circle rounded-full bg-transparent w-1/4 h-96 self-end"></div>
      <div
        class="circle rounded-full bg-gradient-to-r from-yellow-400 to-yellow-700 w-1/4 h-80 self-start"
      >
      </div>
    </div>
    <main class="absolute top-0 w-full">
      <NavBar client:only />
      <Hero />
      <Technologies />
    </main>
  </div>
</Layout>

<style>
  .circle {
    filter: blur(200px);
  }
</style>

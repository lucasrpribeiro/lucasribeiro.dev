---
import { socialLinks } from '../services/links'
---

<footer
  class="container mx-auto flex flex-col items-center justify-center gap-4 p-6"
>
  <section
    class="flex flex-col items-center justify-center gap-4 lg:flex-row lg:justify-between lg:w-11/12 lg:items-end"
  >
    <section
      class="flex flex-col items-center justify-center gap-4 lg:items-start"
    >
      <span
        class="h-8 sm:h-10 text-black bg-white rounded-xl py-2 px-6 font-black uppercase"
        >Lucas
        <span class="hidden lg:inline">Ribeiro</span>
      </span>
      <span class="text-center"
        >2023 Â© Lucas Ribeiro. Todos os direitos reservados.</span
      >
    </section>
    <ul
      class="flex justify-center items-center gap-2 text-white lg:justify-end"
    >
      {
        socialLinks.map((link) => (
          <li>
            <a href={link.href} target="_blank">
              <span class="sr-only">${link.alt}</span>
              <img
                src={link.icon}
                alt={link.alt}
                class="w-10 h-10 p-2 border border-gray-700 rounded hover:border-white duration-300"
              />
            </a>
          </li>
        ))
      }
    </ul>
  </section>
  <section class="border-t border-gray-600 pt-4 w-11/12 text-center">
    <span>
      Design por
      <a
        href="https://instagram.com/pedrohenri.dsgn"
        target="_blank"
        class="font-bold">Pedro Henrique</a
      > & desenvolvido por
      <a
        href="https://www.linkedin.com/in/lucasribeirolr/"
        target="_blank"
        class="font-bold">Lucas Ribeiro</a
      >
    </span>
  </section>
</footer>

---
export interface Props {
  title: string
  description?: string,
  socialImageURL: URL
}

let { title, description, socialImageURL } = Astro.props

const titleTemplate = () => {
  const siteName = 'Desenvolvedor Web'
  return title && title !== siteName ? `${title} - ${siteName}` : siteName
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
socialImageURL = new URL('images/contact-mobile.png', Astro.url)
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml+ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap"
        rel="stylesheet"
        type="text/css"
      />
    </noscript>
    <title>{titleTemplate()}</title>
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta name="description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:width" content="304" />
    <meta property="og:image:height" content="304" />
    <link rel="canonical" href={canonicalURL} />
  </head>
  <body class="bg-primary text-white">
    <slot />
  </body>


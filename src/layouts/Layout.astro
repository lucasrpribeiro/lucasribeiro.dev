    background: #f4f4f5;
    color: #121214;
  }
  ::-moz-selection {
    background: #f4f4f5;
    color: #121214;
  }

  @media (min-width: 1024px) {
    * {
      scrollbar-width: auto;
      scrollbar-color: #1c56b8 #ffffff10;
    }

    *::-webkit-scrollbar {
      width: 5px;
    }

    *::-webkit-scrollbar-track {
      background: #ffffff10;
    }

    *::-webkit-scrollbar-thumb {
      background-color: #1c56b8;
      border-radius: 12px;
      border: 0px none #fff;
    }
  }
</style>
